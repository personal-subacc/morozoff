<div class="container">
  <h2>ジャンル一覧・追加</h2>
  <div class="row">
    <div class="col-3">
      <p class="text-success"><%= flash[:notice] %></p>
      <%= render 'layouts/errors', obj: @genre %>

      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <label>ジャンル</label>
        <%= f.text_field :name, class: 'form-control' %>

        <label><%= f.radio_button :is_active, "true" %>有効</label>
        <label><%= f.radio_button :is_active, "false" %>無効</label>
        <br>
        <%= f.submit "追加", class: 'px-2' %>
      <% end %>
    </div>

    <div class="col-8 offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <% if genre.is_active == true %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-danger">無効</td>
              <% end %>
              <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: 'text-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>