<div class="container">
  <div class="row">
    <div class="col-11">

      <h2>商品一覧</h2>
      <%= link_to "商品新規登録", new_admin_item_path, class: 'btn btn-info my-4' %>

      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>商品説明</th>
            <th>商品画像</th>
            <th>税抜き価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.item_name %></td>
              <td><%= item.description %></td>
              <td><%= attachment_image_tag item, :image, size: '80x60', fallback: 'no_image.jpeg' %></td>
              <td>￥<%= item.non_taxed_price %>  (税抜)</td>
              <td><%= item.genre_id %></td>

              <% if item.sale_status == true %>
                <td class="text-success">販売中</td>
              <% else %>
                <td class="text-danger">売り切れ</td>
              <% end %>

              <td><%= link_to "詳細へ", admin_item_path(item.id), class: 'text-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>