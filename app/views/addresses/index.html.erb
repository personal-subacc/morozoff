<div class="container">
  <h2>配送先一覧・登録</h2>
  <div class="row">
    <div class="col-3">
      <p class="text-success"><%= flash[:notice] %></p>
      <%= render 'layouts/errors', obj: @address %>

      <%= form_with model: @address, local: true do |f| %>
        <label>宛名</label>
        <%= f.text_field :name, class: 'form-control' %>
        <label>配送先郵便番号</label>
        <%= f.text_field :postal_code, class: 'form-control' %>
        <label>配送先住所</label>
        <%= f.text_field :address, class: 'form-control' %>
        <br>
        <%= f.submit "登録する", class: 'px-2' %>
      <% end %>
    </div>

    <div class="col-8 offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>宛名</th>
            <th>郵便番号</th>
            <th>住所</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.name %></td>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= link_to "編集", edit_address_path(address.id), class: 'text-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= link_to "マイページへ戻る", end_user_path(current_end_user.id), class: 'btn btn-success mt-5' %>
</div>